<%- include('../partials/formTop.ejs') %>

<table class="table table-striped table-hover p-4 ">
  <h2 class=""><%= title %></h2>
  <thead>
    <tr>
      <th scope="col-5">Username</th>
      <th scope="col-5">E-mail</th>
      <th scope="col-1">Action</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach( user => { %>
    <tr>
      <td> <%= user.username %> </td>
      <td> <%= user.email %> </td>
      <td>
        <a href="user/<%= user.id %>/detail" class="btn btn-primary" role="button"> Detail</a>
        <a href="user/<%= user.id %>/edit" class="btn btn-primary" role="button"> Edit</a>
        <a href="user/<%= user.id %>/delete" class="btn btn-danger" role="button"> Delete</a>
      </td>
    </tr>
    <% }) %>
    
  </tbody>
</table>

<%- include('../partials/formBottom.ejs') %>`