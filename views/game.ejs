<%- include('./partials/head.ejs') %>

  <body>
    <section class="main-page vw-100 vh-100 container-fluid" id="trial-game">
      <div class="row">
        <div class="col d-flex m-3">
          <a href="/" class="fs-1 h1  nav-link go-back"> < </a>
          <img src="/images/logo 1.png" alt="">
          <span class="text-uppercase fs-2 h1 my-auto mx-3 text-warning"> rock paper scissors </span>
        </div>
      </div>

      <div class="row px-5">
        <div class="col-md-5 d-flex flex-md-column align-items-center gap-1 player">
          <span class="h2 text-uppercase fw-bold flex-sm-grow-1 w-100 text-center">player 1</span>
          <button class="btn border-0 player m-0 p-0" id="playerBatu" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="suit(0)">
            <img class="" src="/images/batu 1.png" alt="">            
          </button>
          <button class="btn border-0 player m-0 p-0" id="playerKertas" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="suit(1)">
            <img class="" src="/images/kertas 1.png" alt="">
          </button>
          <button class="btn border-0 player m-0 p-0" id="playerGunting" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="suit(2)">
            <img class="" src="/images/gunting 1.png" alt="">
          </button>
        </div>

        <div class="col-md-2 d-flex justify-content-center align-items-center text-uppercase text-white">
          <span class="fw-bolder text-danger big-font" id="versus">VS</span>
          <span class="result fs-1 h1 p-5 text-center rounded" id="resultWin"> Player 1 Win </span>
          <span class="result fs-1 h1 p-5 text-center rounded" id="resultDraw"> Draw </span>
          <span class="result fs-1 h1 p-5 text-center rounded" id="resultLose"> Com Win </span>
        </div>
        
        <div class="col-md-5 d-flex flex-md-column align-items-center gap-1">
          <span class="h2 text-uppercase fw-bold flex-sm-grow-1 w-100 text-center">com</span>
          <img src="/images/batu 1.png" id="rivalBatu" alt="">
          <img src="/images/kertas 1.png" id="rivalKertas" alt="">
          <img src="/images/gunting 1.png" id="rivalGunting" alt="">
        </div>
      </div>

      <div class="row">
        <div class="col d-flex justify-content-center">
          <button type="reset" class="btn border-0 w-25" onclick="reset()">
            <a href="/game/user/<%= user.id %>">
              <img width="25%" height="100%" src="/images/refresh.png" alt=""> 
            </a>
          </button>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p>
                disini keluar tag input yang isinya point yang disabled dan nanti dipaksa masukin ke table Game History yang punya user id <%= user.id %> punya <%= user.username %>. 

              </p> 
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Understood</button>
            </div>
          </div>
        </div>
      </div>

    </section>
  <%- include('./partials/script.ejs') %>
  </body>
</html>
